@model WorkTimeDataModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" asp-items="@ViewBag.Employees" class="form-control">
                    <option value="">Select employee</option>
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskId" class="control-label"></label>
                <select asp-for="TaskId" asp-items="@ViewBag.Tasks" class="form-control">
                    <option value="">Select task</option>
                </select>
                <span asp-validation-for="TaskId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkDate" class="control-label"></label>
                <input type="date" asp-for="WorkDate" max="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control"/>
                <span asp-validation-for="WorkDate" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input type="time" asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="StopTime" class="control-label"></label>
                    <input type="time" asp-for="StopTime" class="form-control" />
                    <span asp-validation-for="StopTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" role="button" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
